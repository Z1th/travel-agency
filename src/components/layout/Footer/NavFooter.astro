---
export interface Props {
  section: {
    title: string;
    links: {
      name: string;
      href: string;
    }[];
  };
}

const { section } = Astro.props;
---

<div class="flex flex-col gap-y-3">
  <p class="text-3xl text-white font-semibold">{section.title}</p>
  <div class="flex flex-col gap-y-1">
    {
      section.links.map((link) => (
        <a
          href={link.href}
          class="text-xl text-white opacity-60 transition-opacity hover:opacity-100"
        >
          {link.name}
        </a>
      ))
    }
  </div>
</div>
