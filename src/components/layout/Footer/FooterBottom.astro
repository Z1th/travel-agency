---
import { Icon } from "astro-icon/components";
---

<div class="flex flex-col lg:flex-row justify-between items-center gap-y-6">
  <!-- LOGO -->
  <div class="flex flex-row items-center">
    <Icon
      id="navbar-icon"
      name="material-symbols:travel"
      class="text-4xl lg:text-5xl text-white"
    />

    <span
      class="text-xl md:text-2xl font-semibold whitespace-nowrap text-white transition-colors duration-300"
      >Astro Travel</span
    >
  </div>

  <!-- Navigation Links -->
  <div class="flex flex-wrap justify-center gap-2 md:gap-3 order-1 lg:order-2">
    <a
      href=""
      class="text-white px-3 md:px-4 py-2 md:py-3 rounded-full text-sm md:text-lg opacity-60 transition hover:opacity-100 hover:bg-white hover:text-black"
      >Home</a
    >
    <a
      href=""
      class="text-white px-3 md:px-4 py-2 md:py-3 rounded-full text-sm md:text-lg opacity-60 transition hover:opacity-100 hover:bg-white hover:text-black"
      >Tours</a
    >
    <a
      href=""
      class="text-white px-3 md:px-4 py-2 md:py-3 rounded-full text-sm md:text-lg opacity-60 transition hover:opacity-100 hover:bg-white hover:text-black"
      >Promotions</a
    >
    <a
      href=""
      class="text-white px-3 md:px-4 py-2 md:py-3 rounded-full text-sm md:text-lg opacity-60 transition hover:opacity-100 hover:bg-white hover:text-black"
      >About</a
    >
    <a
      href=""
      class="text-white px-3 md:px-4 py-2 md:py-3 rounded-full text-sm md:text-lg opacity-60 transition hover:opacity-100 hover:bg-white hover:text-black"
      >Blog</a
    >
  </div>

  <!-- Contact Button -->
  <a
    href="#"
    class="flex flex-row gap-x-2 text-white text-sm md:text-lg border border-white rounded-full items-center justify-center px-4 md:px-6 py-2 hover:bg-white hover:text-black transition order-3"
  >
    <Icon
      name="material-symbols:phone-in-talk-rounded"
      class="w-5 h-5 md:w-6 md:h-6"
    />
    <p class="font-semibold">Call Us</p>
  </a>
</div>

<div
  class="flex flex-col md:flex-row items-center justify-center gap-1 md:gap-4 text-sm text-gray-400"
>
  <span>© 2025 Astro Travel. All rights reserved.</span>
  <span class="hidden md:inline">|</span>
  <span
    >Developed by
    <a
      href="https://linkedin.com/in/hermar-lopez"
      target="_blank"
      rel="noopener noreferrer"
      class="text-white hover:text-blue-400 transition-colors font-medium"
    >
      ZithCode (Hermar López)
    </a>
  </span>
</div>
