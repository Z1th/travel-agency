---
export interface Props {
  href: string;
  text: string;
  isActive?: boolean;
}

const { href, text, isActive = false } = Astro.props;
---

<li>
  <a
    href={href}
    class={`block py-2 px-3 text-white rounded-sm md:p-0 ${
      isActive 
        ? "bg-blue-700 md:bg-transparent md:text-white" 
        : "hover:bg-white/10 md:hover:bg-transparent md:border-0 md:hover:text-blue-400"
    }`}
    aria-current={isActive ? "page" : undefined}
  >
    {text}
  </a>
</li>