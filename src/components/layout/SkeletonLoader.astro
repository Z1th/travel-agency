---
export interface Props {
  class?: string;
}

const { class: className = "" } = Astro.props;
---

<div class={`animate-pulse bg-gray-200 rounded ${className}`}></div>

<style>
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }
  
  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
</style>