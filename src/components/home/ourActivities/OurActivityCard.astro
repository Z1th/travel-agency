---
export interface Props {
  image: string;
  title: string;
  countActivities: string;
}

const { image, title, countActivities } = Astro.props;
---

<div class="bg-white rounded-xl">
  <div class="relative h-48">
    <img 
      src={image} 
      alt={title}
      class="w-full h-full object-cover rounded-md"
    />
  </div>
  <div class="p-4">
    <h3 class="text-xl font-semibold mb-2">{title}</h3>
    <p class="text-gray-600 text-sm">{countActivities} Accomodations</p>
  </div>
</div>