---
import SkeletonLoader from "../../layout/SkeletonLoader.astro";
---

<div class="flex gap-6">
  <!-- Offer Card Skeletons -->
  {Array.from({ length: 3 }).map(() => (
    <div class="w-full h-48 sm:h-52 lg:h-56 relative rounded-xl min-w-0 flex-shrink-0">
      <!-- Background Image Skeleton -->
      <SkeletonLoader class="absolute inset-0 w-full h-full rounded-xl" />
      
      <!-- Content Overlay -->
      <div class="absolute inset-0 bg-black/20 rounded-xl"></div>
      
      <!-- Text Content Skeletons -->
      <div class="relative z-10 flex flex-col justify-center h-full p-6 gap-y-2">
        <SkeletonLoader class="h-4 w-24 rounded bg-gray-300" />
        <SkeletonLoader class="h-6 w-3/4 rounded bg-gray-300" />
        <SkeletonLoader class="h-4 w-5/6 rounded bg-gray-300" />
        <SkeletonLoader class="h-8 w-24 rounded-xl mt-2 bg-gray-300" />
      </div>
    </div>
  ))}
</div>