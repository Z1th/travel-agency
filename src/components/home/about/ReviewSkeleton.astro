---
import SkeletonLoader from "../../layout/SkeletonLoader.astro";
---

<div class="w-full h-auto pb-8">
  <div class="px-2">
    <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-100">
      <div class="flex items-start gap-4">
        <!-- Avatar Skeleton -->
        <SkeletonLoader class="w-16 h-16 rounded-full" />
        
        <div class="flex-1">
          <!-- Review Text Skeleton -->
          <div class="mb-3 space-y-2">
            <SkeletonLoader class="h-4 w-full rounded" />
            <SkeletonLoader class="h-4 w-4/5 rounded" />
            <SkeletonLoader class="h-4 w-3/5 rounded" />
          </div>
          
          <!-- User Info and Rating -->
          <div class="flex items-center justify-between">
            <div class="space-y-1">
              <SkeletonLoader class="h-4 w-24 rounded" />
              <SkeletonLoader class="h-3 w-20 rounded" />
            </div>
            <div class="flex items-center gap-1">
              <SkeletonLoader class="w-4 h-4 rounded" />
              <SkeletonLoader class="h-4 w-8 rounded" />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>