---
import TitleWithCrumb from "../../layout/TitleWithCrumb.astro";
import DescriptionSection from "../../layout/DescriptionSection.astro";
---

<div class="flex flex-col md:flex-row">
  <div class="flex flex-col gap-y-4 w-full md:w-1/2">
    <TitleWithCrumb sectionName="Latest Blog" title="Read the Newest Post" />
  </div>

  <div
    class="flex flex-col w-full md:w-1/2 justify-center gap-y-5 md:px-13 py-6"
  >
    <DescriptionSection
      text={`Immerse yourself in captivating travel stories, destination deep-dives, and personal experiences from around the globe. Your inspiration starts here.`}
    />
    <a
      href="#"
      class="flex flex-row max-w-max items-center justify-between px-5 py-3 bg-black shadow rounded-full hover:opacity-90"
      >
      <p class="text-white">Explore More</p></a
    >
  </div>
</div>
