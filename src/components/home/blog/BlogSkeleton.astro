---
import SkeletonLoader from "../../layout/SkeletonLoader.astro";
---

<div class="overflow-hidden">
  <div class="flex gap-6">
    <!-- Blog Card Skeletons -->
    {Array.from({ length: 4 }).map(() => (
      <div class="w-full flex flex-col gap-y-4 min-w-0 flex-shrink-0">
        <!-- Image Skeleton -->
        <SkeletonLoader class="w-full h-48 sm:h-52 lg:h-60 rounded-t-lg" />
        
        <!-- Title Skeleton -->
        <SkeletonLoader class="h-6 w-3/4 rounded" />
        
        <!-- Description Skeleton -->
        <div class="space-y-2">
          <SkeletonLoader class="h-4 w-full rounded" />
          <SkeletonLoader class="h-4 w-5/6 rounded" />
        </div>
        
        <!-- Author Info Skeleton -->
        <div class="flex items-center gap-2">
          <SkeletonLoader class="w-6 h-6 rounded-full" />
          <SkeletonLoader class="h-3 w-20 rounded" />
          <SkeletonLoader class="h-3 w-12 rounded" />
          <SkeletonLoader class="h-3 w-16 rounded" />
        </div>
      </div>
    ))}
  </div>
</div>