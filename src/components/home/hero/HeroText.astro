---
export interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle = ""} = Astro.props;
---

    <div class="max-w-4xl flex flex-col items-center px-4 md:px-8 md:px-16">
      <h1
        class="font-skranji text-3xl md:text-4xl lg:text-7xl uppercase mb-6 leading-tight"
      >
        {title}
      </h1>

      {
        subtitle && (
          <div class="max-w-xl">
            <p class="text-md sm:text-md md:text-xl lg:text-xl opacity-90 leading-relaxed">
              {subtitle}
            </p>
          </div>
        )
      }
    </div>