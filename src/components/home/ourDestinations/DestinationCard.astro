---
export interface Props {
  image: string;
  title: string;
  location: string;
}

const { image, title, location } = Astro.props;
---

<div class="flex relative w-full h-96">
  <a href="#">
    <img
      src={image}
      alt={title}
      class="w-full h-full object-cover rounded-md opacity-100 transition-opacity hover:opacity-80"
    />
  </a>
  <div
    class="absolute bottom-4 left-4 bg-black/70 px-4 py-2 rounded-full flex flex-row gap-x-1"
  >
    <div class="flex flex-col">
      <p class="text-white font-semibold text-md">{title}</p>
      <p class="text-gray-300 font-semibold text-sm">{location}</p>
    </div>
  </div>
</div>
