---
import SkeletonLoader from "../../layout/SkeletonLoader.astro";
---

<div class="overflow-hidden">
  <div class="flex gap-6">
    <!-- Destination Card Skeletons -->
    {Array.from({ length: 4 }).map(() => (
      <div class="w-80 h-96 relative rounded-md min-w-0 flex-shrink-0">
        <!-- Image Skeleton -->
        <SkeletonLoader class="w-full h-full rounded-md" />
        
        <!-- Overlay Info -->
        <div class="absolute bottom-4 left-4 bg-black/70 px-4 py-2 rounded-full">
          <div class="flex flex-col gap-1">
            <SkeletonLoader class="h-4 w-24 rounded bg-gray-300" />
            <SkeletonLoader class="h-3 w-20 rounded bg-gray-300" />
          </div>
        </div>
      </div>
    ))}
  </div>
</div>